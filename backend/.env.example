# Environment Configuration for Project Kisan Voice AI
# Copy this to .env and fill in your actual values

# Google Cloud Project Configuration
PROJECT_ID=your-google-cloud-project-id
LOCATION=us-central1

# Google Cloud Service Account
# Download your service account key JSON file and place it in the backend folder
# Make sure it's named 'project-kisan-key.json' or update the path in vertex.js
GOOGLE_APPLICATION_CREDENTIALS=./project-kisan-key.json

# Server Configuration
PORT=5000
NODE_ENV=development

# API Configuration (for frontend)
VITE_API_URL=http://localhost:5000

# Voice AI Configuration
DEFAULT_LANGUAGE=hi-IN
MAX_AUDIO_FILE_SIZE=10485760

# Optional: Custom voice settings
VOICE_SPEED=0.9
VOICE_PITCH=0.0
VOICE_VOLUME=0.0

# Database Configuration (if using Firestore)
FIRESTORE_COLLECTION=voice_interactions

# Logging Configuration
LOG_LEVEL=info
ENABLE_VOICE_LOGGING=true
